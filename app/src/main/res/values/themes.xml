<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmDiabetes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_default</item>
        <item name="colorSecondaryVariant">@color/color_default</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/color_default</item>
    </style>

    <style name="CustomTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="Search_View_Theme">
        <item name="colorSecondary">@color/color_default</item>
        <item name="searchBackground">@color/color_default</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">Pesquisar</item>
        <item name="hintColor">@color/white</item>
        <item name="backIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconsTint">@color/white</item>
    </style>

    <style name="Base_TollbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/Base_TollbarTheme</item>
    </style>
    
    <style name="Base_TollbarTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>